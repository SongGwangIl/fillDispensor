<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.ac.kopo.device.service.Impl.DeviceDAO">

	<resultMap type="DeviceVO" id="DeviceMap">
		<id column="DEVICE_ID" property="deviceId"/>
		<result column="DEV_INFO_DATE" property="deviceDate"/>
		<result column="DEV_INFO_FAC" property="deviceFac"/>
		<result column="DEV_INFO_MODEL" property="deviceModel"/>
	</resultMap>
	
	<select id="getuserDeviceId">
		SELECT USER_ID
		FROM DEVICE
		WHERE USER_ID = #{userId}
	</select>

	<select id="getAlldeviceId">
		SELECT DEVICE_ID
		FROM DEVICE_INFO
	</select>

	<insert id="deviceRegister">
		INSERT INTO device(DEVICE_ID, USER_ID)
		VALUES(#{deviceId}, #{userId})
	</insert>
	
	<select id="getdeviceId">
		SELECT DEVICE_ID
		FROM DEVICE
	</select>
	
	<select id="getdeviceInfo">
		SELECT DEVICE_ID, USER_ID, DEVICE_NAME
		FROM DEVICE
		WHERE USER_ID = #{userId}
	</select>
	
	<update id="updateMydevice">
		UPDATE DEVICE SET DEVICE_ID = #{deviceId}, DEVICE_NAME = #{deviceName}
		WHERE USER_ID = #{userId}
	</update>
	
	<delete id="deleteMydevice">
		DELETE FROM DEVICE WHERE USER_ID = #{userId}
	</delete>
	
</mapper>